@using Store.Models
@model Check

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    decimal webMoney = Math.Round(Model.Money / 194);
}

<form class="check-content" id="checkForm">
    <div class="check-item">
        <img src="~/Content/icons/png/wmlogo_vector_blue.png" />
    </div>
    <div class="check-item">
        @Html.ValidationSummary("", new { @class = "text-danger" })
    </div>
    <div class="check-item">
        <span class="label-control">@Resources.Resource.Purchase <span>@webMoney</span> webMoney</span>
    </div>
    <div class="check-item">
        <label class="label-control">@Resources.Resource.CardNumber</label>
        <input type="text" name="CreditCard" class="check-text" data-bind="value:cartId" />
    </div>
    <div class="check-item">
        <span class="label-control">@Resources.Resource.PaymentSystem</span>
    </div>
    <div class="check-item">
        <label class="label-control">@Resources.Resource.SumWeb</label>
        <input type="text" name="Digits" class="check-text" data-bind="value:webMoney" />
    </div>
    <div class="check-item">
        <input type="submit" class="pay-btn" value="Заказать" data-total-price="@Model.Money" data-bind="click:entryCheck" />
    </div>
</form>