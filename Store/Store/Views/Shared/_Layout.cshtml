<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Интернет магазин</title>
    @Styles.Render("~/Content/css/css")
    @Scripts.Render("~/bundles/jsfw/modernizr")

</head>
<body class="flex-content">
    <div class="left-aside">
        <ul class="sidebar-nav">
            <li class="sidebar-brand">
                <a href="#">
                    Start Bootstrap
                </a>
            </li>
            <li>
                <a href="#">Dashboard</a>
            </li>
            <li>
                <a href="#">Shortcuts</a>
            </li>
            <li>
                <a href="#">Overview</a>
            </li>
            <li>
                <a href="#">Events</a>
            </li>
            <li>
                <a href="#">About</a>
            </li>
            <li>
                <a href="#">Services</a>
            </li>
            <li>
                <a href="#">Contact</a>
            </li>
        </ul>
    </div>
    <div class="wrapper">
        <header class="header">
            <div class="navbar-collapse collapse">
                @Html.Partial("_LoginPartial")
            </div>
        </header>
        <div class="content">
            <article class="main">
                @RenderBody()
            </article>
        </div>
    </div>

    @Scripts.Render("~/bundles/jsfw/jquery")
    @Scripts.Render("~/bundles/jsfw/bootstrap")
    @Scripts.Render("~/bundles/jsfw/knockout")
    @RenderSection("scripts", required: false)

    <script>
        $("#menu-toggle").click(function (e) {
            e.preventDefault();
            $(".left-aside").toggleClass("toggled");
        });
    </script>

</body>
</html>
