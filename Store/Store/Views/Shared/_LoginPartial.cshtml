@using Microsoft.AspNet.Identity
@if (Request.IsAuthenticated)
{
    using (Html.BeginForm("LogOff", "Account", FormMethod.Post, new { id = "logoutForm", @class = "navbar-right" }))
    {
        @Html.AntiForgeryToken()

        <ul class="navbar-nav">
            <li class="dropdown">
                <a href="#" class="dropdown-toggle" data-bind="click: toggleNavbarMenu">@User.Identity.GetUserName()</a>
                <ul class="dropdown-menu">
                    <li class="header"><span>Пользователь</span></li>
                    <li>
                        <ul class="drop-menu-item">
                            <li>
                                <img src="~/Content/icons/png/basket1.png" />
                                <a href="/Cart/Cart">Моя корзина</a>
                            </li>
                            <li>
                                <img src="~/Content/icons/png/sale1.jpg" />
                                <a href="/Check/EntryCheck">Список покупок</a>
                            </li>
                            <li>
                                <img src="~/Content/icons/png/check.jpg" />
                                <a href="#">Купить</a>
                            </li>
                            <li>
                                <img src="~/Content/icons/png/product.png" />
                                <a href="/Home/AdminProducts">Продукты</a>
                            </li>
                        </ul>
                    </li>
                </ul>
            </li>
            <li><a href="javascript:document.getElementById('logoutForm').submit()">Выйти</a></li>
        </ul>
    }
}
else
{
    <ul class="navbar-nav">
        <li>@Html.ActionLink("Регистрация", "Register", "Account", routeValues: null, htmlAttributes: new { id = "registerLink" })</li>
        <li>@Html.ActionLink("Выполнить вход", "Login", "Account", routeValues: null, htmlAttributes: new { id = "loginLink" })</li>
    </ul>
}
